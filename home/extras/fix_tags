#!/bin/bash
#
# Fixes tags generated by "gem ctags" (https://github.com/tpope/gem-ctags)
# and makes them non-sorted.
# Otherwise vim will throw E432: tags not sorted errors all over the place
#
#
echo Fixing tags ... please wait
GEM_DIR=`gem env | grep "INSTALLATION DIRECTORY" | cut -d ":" -f 2`
find $GEM_DIR/gems -type f -name tags -exec sed -i -e "s/TAG_FILE_SORTED 	1/TAG_FILE_SORTED	0/g" {} \;
